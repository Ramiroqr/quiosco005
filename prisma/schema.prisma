
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id Int @id  @default(autoincrement())
  name String
  slug String
  products Product[]
}

model Product {
  ind Int @id @default(autoincrement())
  name String
  price Float
  image String
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
}